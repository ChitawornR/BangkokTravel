<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BangkokTravel.Pages.CategoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CategoryPage"
    NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <!--  Header  -->
            <HorizontalStackLayout Margin="0,5,0,0">
                <Button
                    x:Name="backBtnFromCategoryPage"
                    BackgroundColor="Transparent"
                    Clicked="backBtnFromCategoryPage_Clicked"
                    ImageSource="backicon" />
                <Label
                    x:Name="titleCategoryPage"
                    FontFamily="ManropeBold"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="All Place"
                    VerticalOptions="Center" />

            </HorizontalStackLayout>
            <!--  Search Bar  -->
            <Border
                Padding="-4"
                StrokeShape="RoundRectangle 20,20,20,20"
                StrokeThickness="0">
                <SearchBar
                    BackgroundColor="#EEF3F6"
                    Placeholder="Search . . ."
                    TextChanged="SearchBar_TextChanged" />
            </Border>

            <!--  Search bar result  -->
            <ListView
                x:Name="searchResultListViewCategoryPage"
                IsVisible="False"
                ItemTapped="searchResultListViewCategoryPage_ItemTapped"
                ItemsSource="{Binding SearchedPlaceItems}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <!--  Select category  -->
            <Label
                Margin="0,10,0,-15"
                FontFamily="ManropeBold"
                Text="Choose Category" />
            <Picker
                x:Name="pickerCategory"
                Title="Choose Category"
                FontFamily="ManropeRegular"
                SelectedIndexChanged="OnCategoryChanged">
                <Picker.Items>
                    <x:String>All Place</x:String>
                    <x:String>Historical</x:String>
                    <x:String>Nature and Parks</x:String>
                    <x:String>Shopping</x:String>
                    <x:String>Lifestyle and Nightlife</x:String>
                </Picker.Items>
            </Picker>

            <!--  Show Items Category  -->
            <CollectionView ItemsSource="{Binding FilteredPlaceItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!--  Item  -->
                        <Border
                            Margin="0,10,0,0"
                            HeightRequest="150"
                            StrokeShape="RoundRectangle 15,15,15,15">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding}" Tapped="TapGestureRecognizer_Tapped" />
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout>
                                <!--  Image  -->
                                <Image
                                    Aspect="AspectFill"
                                    Source="{Binding img}"
                                    WidthRequest="150" />
                                <!--  Text  -->
                                <VerticalStackLayout
                                    Padding="10"
                                    Spacing="5"
                                    WidthRequest="225">
                                    <Label
                                        FontFamily="ManropeBold"
                                        FontSize="17"
                                        LineBreakMode="TailTruncation"
                                        Text="{Binding name}" />
                                    <Label
                                        LineBreakMode="TailTruncation"
                                        MaxLines="3"
                                        Text="{Binding description}" />
                                    <!--  time and price  -->
                                    <Grid Margin="0,5,0,0" Padding="0,0,5,0">
                                        <Label
                                            HorizontalOptions="Start"
                                            Text="{Binding opening_hours}"
                                            TextColor="Red"
                                            WidthRequest="150" />
                                        <Label
                                            HorizontalOptions="End"
                                            Text="{Binding entrance_fee}"
                                            TextColor="#006fb9"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>